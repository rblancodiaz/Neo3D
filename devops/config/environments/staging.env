# Staging Environment Configuration

# Application
NODE_ENV=staging
APP_NAME=hotel-mapper
APP_VERSION=1.0.0
LOG_LEVEL=info

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=hotel_mapper_staging
DB_USER=hotel_mapper_user
DB_PASS=CHANGE_THIS_PASSWORD
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_SSL=true

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE_THIS_PASSWORD

# Backend API
API_PORT=3001
API_BASE_URL=https://staging.hotel-mapper.com
CORS_ORIGIN=https://staging.hotel-mapper.com
JWT_SECRET=CHANGE_THIS_TO_SECURE_SECRET
JWT_EXPIRES_IN=1d

# Frontend
FRONTEND_PORT=80
VITE_API_BASE_URL=https://staging.hotel-mapper.com/api
VITE_WS_URL=wss://staging.hotel-mapper.com/ws

# File Upload
UPLOAD_PATH=/app/uploads
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,gif
CDN_URL=https://cdn-staging.hotel-mapper.com

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_PASSWORD
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_URL=https://monitoring-staging.hotel-mapper.com

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=SENDGRID_API_KEY
EMAIL_FROM=noreply@hotel-mapper.com

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
HELMET_ENABLED=true
COMPRESSION_ENABLED=true