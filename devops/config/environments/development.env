# Development Environment Configuration

# Application
NODE_ENV=development
APP_NAME=hotel-mapper
APP_VERSION=1.0.0
LOG_LEVEL=debug

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=hotel_mapper
DB_USER=postgres
DB_PASS=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Backend API
API_PORT=3001
API_BASE_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:5173
JWT_SECRET=development-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Frontend
FRONTEND_PORT=5173
VITE_API_BASE_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001

# File Upload
UPLOAD_PATH=/app/uploads
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,gif

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Email (for future use)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@hotel-mapper.local