# Production Environment Configuration

# Application
NODE_ENV=production
APP_NAME=hotel-mapper
APP_VERSION=1.0.0
LOG_LEVEL=error

# Database
DB_HOST=PRODUCTION_DB_HOST
DB_PORT=5432
DB_NAME=hotel_mapper_prod
DB_USER=hotel_mapper_prod_user
DB_PASS=CHANGE_THIS_TO_SECURE_PASSWORD
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_SSL=true
DB_BACKUP_ENABLED=true

# Redis
REDIS_HOST=PRODUCTION_REDIS_HOST
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
REDIS_CLUSTER_ENABLED=false

# Backend API
API_PORT=3001
API_BASE_URL=https://api.hotel-mapper.com
CORS_ORIGIN=https://hotel-mapper.com
JWT_SECRET=CHANGE_THIS_TO_VERY_SECURE_SECRET
JWT_EXPIRES_IN=1d
API_KEY=CHANGE_THIS_TO_API_KEY

# Frontend
FRONTEND_PORT=80
VITE_API_BASE_URL=https://api.hotel-mapper.com
VITE_WS_URL=wss://api.hotel-mapper.com/ws

# File Upload
UPLOAD_PATH=/app/uploads
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp
CDN_URL=https://cdn.hotel-mapper.com
S3_BUCKET=hotel-mapper-uploads
S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=CHANGE_THIS
AWS_SECRET_ACCESS_KEY=CHANGE_THIS

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_URL=https://monitoring.hotel-mapper.com
SENTRY_DSN=CHANGE_THIS_TO_SENTRY_DSN

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=PRODUCTION_SENDGRID_API_KEY
EMAIL_FROM=noreply@hotel-mapper.com

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
FORCE_HTTPS=true
SESSION_SECRET=CHANGE_THIS_TO_SECURE_SESSION_SECRET

# Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=CHANGE_THIS

# Production URLs
PRODUCTION_URL=https://hotel-mapper.com
API_DOCS_URL=https://docs.hotel-mapper.com