# Frontend Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_API_TIMEOUT=30000

# File Upload
VITE_MAX_UPLOAD_SIZE=10485760
VITE_SUPPORTED_FORMATS=image/jpeg,image/png
VITE_MIN_IMAGE_WIDTH=800
VITE_MIN_IMAGE_HEIGHT=600

# Canvas Configuration
VITE_CANVAS_MAX_ZOOM=5
VITE_CANVAS_MIN_ZOOM=0.5
VITE_CANVAS_GRID_SIZE=10

# Performance
VITE_DEBOUNCE_DELAY=100
VITE_FPS_TARGET=60

# Features
VITE_ENABLE_UNDO_REDO=true
VITE_MAX_UNDO_STACK=10
VITE_ENABLE_GRID=true
VITE_ENABLE_SNAP_TO_GRID=false