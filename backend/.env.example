# Backend Environment Configuration
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://hotel_app:SecurePassword2024@localhost:5432/hotel_mapper
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hotel_mapper
DB_USER=hotel_app
DB_PASSWORD=SecurePassword2024

# CORS
CORS_ORIGIN=http://localhost:5173

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png
IMAGE_QUALITY=85

# Security
JWT_SECRET=your-secret-key-here
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Image Processing
THUMBNAIL_WIDTH=200
PREVIEW_WIDTH=800
MAX_IMAGE_WIDTH=2048